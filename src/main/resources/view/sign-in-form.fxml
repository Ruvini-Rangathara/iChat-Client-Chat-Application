<AnchorPane fx:id="anchorpane" prefHeight="650.0" prefWidth="400.0" style="-fx-background-color: #ace1af;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ichatclient.controller.SignInFormController">
   <children>
      <ImageView fitHeight="650.0" fitWidth="400.0" opacity="0.1" pickOnBounds="true">
         <image>
            <Image url="@../assert/bg.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="75.0" fitWidth="75.0" layoutX="98.0" layoutY="53.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assert/iChat-logo.png" />
         </image>
      </ImageView>
      <Label layoutX="179.0" layoutY="70.0" prefHeight="18.0" prefWidth="165.0" text="iChat">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="35.0" />
         </font>
      </Label>
      <Label layoutX="114.0" layoutY="150.0" prefHeight="44.0" prefWidth="224.0" text="Sign In to iChat">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" focusTraversable="false" layoutX="49.0" layoutY="272.0" onAction="#txtUsernameOnAction" prefHeight="30.0" prefWidth="300.0" promptText="Username" style="-fx-background-color: #e9ffdb;" />
