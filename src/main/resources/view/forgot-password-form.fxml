      <TextField fx:id="txtOtp2" focusTraversable="false" layoutX="157.0" layoutY="428.0" onAction="#txtOtp2OnAction" prefHeight="30.0" prefWidth="36.0" style="-fx-background-color: #e9ffdb;" />
