            <Image url="@../../../../../iChatServer/src/main/resources/assert/iChat-logo.png" />
         </image>
      </ImageView>
      <Label layoutX="181.0" layoutY="43.0" prefHeight="44.0" prefWidth="145.0" text="iChat">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="35.0" />
         </font>
      </Label>
      <Label layoutX="113.0" layoutY="160.0" prefHeight="44.0" prefWidth="224.0" text="Reset Password">
         <font>
            <Font size="20.0" />
