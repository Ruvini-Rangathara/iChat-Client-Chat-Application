      <ImageView fitHeight="75.0" fitWidth="75.0" layoutX="98.0" layoutY="43.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assert/iChat-logo.png" />
         </image>
      </ImageView>
      <Label layoutX="179.0" layoutY="60.0" prefHeight="18.0" prefWidth="165.0" text="iChat">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="35.0" />
         </font>
      </Label>
      <Label layoutX="114.0" layoutY="140.0" prefHeight="44.0" prefWidth="224.0" text="Sign Up to iChat">
         <font>
            <Font size="20.0" />
